<RelativeLayout
xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="140dp"
    tools:context="com.wirundich.kalorienrechner.fragments.DayViewOverview">
android:layout_width="fill_parent"
android:layout_height="wrap_content"
android:background="@android:drawable/dialog_holo_light_frame"
android:padding="10dp">

<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:textAppearance="?android:attr/textAppearanceLarge"
    android:text="Large Text"

    android:id="@+id/txt_dayView_day"
    android:layout_alignParentTop="true"
    android:paddingLeft="50px"
    android:paddingRight="50px"
    android:paddingTop="10dp"
    android:layout_toRightOf="@+id/imageView2"
    android:layout_toEndOf="@+id/imageView2" />

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textAppearance="?android:attr/textAppearanceMedium"
    android:text="Medium Text"
    android:id="@+id/txt_dayView_date"
    android:layout_below="@+id/txt_dayView_day"
    android:layout_alignLeft="@+id/txt_dayView_day"
    android:layout_marginLeft="70px" />

<ProgressBar
    style="@android:style/Widget.Holo.ProgressBar.Horizontal"
    android:layout_width="match_parent"
    android:layout_height="10dp"
    android:id="@+id/prog_dayview_calorie"
    android:progress="100"
    android:progressDrawable="@drawable/costum_progressbar"
    android:layout_below="@+id/imageView2"
    android:layout_alignParentBottom="false"
    android:layout_marginBottom="10dp"
    android:layout_alignParentLeft="true"
    android:layout_alignParentRight="true" />

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textAppearance="?android:attr/textAppearanceSmall"
    android:text="@string/state"
    android:id="@+id/textView5"
    android:layout_below="@+id/txt_dayView_date"
    android:layout_alignLeft="@+id/txt_dayView_date" />

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textAppearance="?android:attr/textAppearanceSmall"
    android:text="@string/state"
    android:id="@+id/txtCalorieAct"
    android:layout_below="@+id/txt_dayView_date"
    android:layout_marginLeft="10px"
    android:layout_toRightOf="@+id/textView5" />

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textAppearance="?android:attr/textAppearanceSmall"
    android:text="/"
    android:id="@+id/textView4"
    android:layout_below="@+id/txt_dayView_date"
    android:layout_marginLeft="10px"
    android:layout_toRightOf="@+id/txtCalorieAct" />

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textAppearance="?android:attr/textAppearanceSmall"
    android:text="@string/state"
    android:id="@+id/txtCalorieMax"
    android:layout_below="@+id/txt_dayView_date"
    android:layout_marginLeft="10px"
    android:layout_toRightOf="@+id/textView4" />

    <ImageView
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:id="@+id/imageView2"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:src="@drawable/icon_overiew"
        android:layout_margin="10dp" />

</RelativeLayout>